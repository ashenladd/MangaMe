<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MangaMe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_light</item>
        <item name="colorOnPrimaryContainer">@color/blue_dark</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_light</item>
        <item name="colorOnSecondaryContainer">@color/blue_darker</item>
        <item name="colorTertiary">@color/purple</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/purple_light</item>
        <item name="colorOnTertiaryContainer">@color/purple_dark</item>
    </style>

    <style name="Theme.MangaMe" parent="Base.Theme.MangaMe" />

    <style name="Theme.MangaMe.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_darker</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/Theme.MangaMe</item>
    </style>

</resources>